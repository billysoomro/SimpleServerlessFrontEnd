@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Guitar";
}

<h2>Delete Guitar</h2>

<h4>Guitar</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this guitar?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Guitar.Id
        </dd>
        <dt class="col-sm-2">
            Make
        </dt>
        <dd class="col-sm-10">
            @Model.Guitar.Make
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Guitar.Model
        </dd>
        <dt class="col-sm-2">
            Shape
        </dt>
        <dd class="col-sm-10">
            @Model.Guitar.Shape
        </dd>
        <dt class="col-sm-2">
            Strings
        </dt>
        <dd class="col-sm-10">
            @Model.Guitar.Strings
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Guitar.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </form>
</div>
